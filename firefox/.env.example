# Webtero OAuth Configuration
# Copy this file to .env and fill in your Zotero OAuth credentials
# Register your application at: https://www.zotero.org/oauth/apps

# Zotero OAuth 1.0a Credentials
ZOTERO_OAUTH_CLIENT_KEY=your_client_key_here
ZOTERO_OAUTH_CLIENT_SECRET=your_client_secret_here

# Feature Flags
# Set to 'true' to enable OAuth-based authentication
# Set to 'false' to use manual API key entry (current behavior)
FEATURE_OAUTH_ENABLED=false
